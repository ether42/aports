# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libarchive
pkgver=3.1.2
pkgrel=2
pkgdesc="library that can create and read several streaming archive formats"
url="http://libarchive.googlecode.com/"
arch="all"
license="BSD"
depends=""
subpackages="$pkgname-dev $pkgname-doc $pkgname-tools"
makedepends="zlib-dev bzip2-dev xz-dev acl-dev libressl-dev expat-dev"
depends_dev="$makedepends"
source="http://www.libarchive.org/downloads/libarchive-$pkgver.tar.gz
	0001-mtree-fix-line-filename-length-calculation.patch
	libarchive-3.1.2-acl.patch
	libarchive-3.1.2-sparce-mtree.patch
	CVE-2013-0211.patch
	CVE-2015-2304.patch
	"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build () {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--without-xml2 \
		|| return 1

	# do not use musl's broken lchmod
	sed -i /HAVE_LCHMOD/d "$_builddir"/config.h

	make
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
}

tools() {
	pkgdesc="libarchive tools bsdtar and bsdcpio"
	mkdir -p "$subpkgdir"/usr/ "$subpkgdir"/bin/
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
	ln -s /usr/bin/bsdcpio "$subpkgdir"/bin/cpio
	ln -s /usr/bin/bsdtar "$subpkgdir"/bin/tar
}

